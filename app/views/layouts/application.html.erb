<!DOCTYPE html>
<html>
  <head>
    <title>Jinx</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=#{ENV['MAPS_API_KEY']}" %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <script>
      window.userImg = `<%= image_url('wizard.png') %>`
      window.bizImg = `<%= image_url('leaky_cauldron.jpg') %>`
      window.logoImg = `<%= image_url('jinx_logo.png') %>`
      window.logoCircleImg = `<%= image_url('jinx_logo_circle.png') %>`
      window.reviewImg = `<%= image_url('cauldron.jpg') %>`
      window.splashImg = `<%= image_url('potions.jpg') %>`
      window.footer = `<%= image_url('mountain-footer.jpg') %>`
    </script>

    <% if logged_in? %>
      <script type="text/javascript">
        window.current_user = 
        <%= render( "api/users/user.json.jbuilder", user: current_user ).html_safe %>
      </script>
    <% end %>
 
  </head>

  <body>
    <%= yield %>
  </body>
</html>
