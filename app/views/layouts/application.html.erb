<!DOCTYPE html>
<html>
  <head>
    <title>Jinx</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>


    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <% current_user = current_user || nil %>
    <% if current_user %>
      <script>
        window.current_user = current_user
      </script>
    <% else %>
      <script>
        window.current_user = null
      </script>
    <% end %>
 
  </head>

  <body>
    <%= yield %>
  </body>
</html>
